@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{string inspireServiceUrl = Configuration["INSPIRE_SERVICE_URL"];}
@model Demo.AspNetCore.MicroFrontendsInAction.Decide.Models.ProductViewModel
<html>
  <head>
    <title>@Model.Name</title>
    <link href="/static/page.css" rel="stylesheet" />
    <link href="/static/outlines.css" rel="stylesheet" />
  </head>
  <body class="decide_layout">
    <h1 class="decide_header">The Tractor Store</h1>
    <div class="decide_product">
      <h2 class="decide_headline">@Model.Name</h2>
      <img class="decide_image" src="https://mi-fr.org/img/@(Model.Id).svg" />
    </div>
    <aside class="decide_recos" data-fragment="@(inspireServiceUrl + "/fragment/recommendations/" + Model.Id)">
      <a href="@(inspireServiceUrl + "/recommendations/" + Model.Id)">Show Recommendations</a>
    </aside>
    <script src="/static/page.js" async></script>
  </body>
</html>
