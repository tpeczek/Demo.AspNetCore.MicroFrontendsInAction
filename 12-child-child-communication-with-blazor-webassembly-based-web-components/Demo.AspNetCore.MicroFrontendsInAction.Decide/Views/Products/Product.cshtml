@model Demo.AspNetCore.MicroFrontendsInAction.Decide.Models.ProductViewModel
<html>
  <head>
    <title>@Model.Name</title>
    <link href="/decide/static/page.css" rel="stylesheet" />
    <link href="/decide/static/outlines.css" rel="stylesheet" />
    <link href="/checkout/static/components.css" rel="stylesheet" />
  </head>
  <body class="decide_layout">
    <h1 class="decide_header">The Tractor Store</h1>
    <div class="decide_product">
      <h2 class="decide_headline">@Model.Name</h2>
      <img class="decide_image" src="https://mi-fr.org/img/@(Model.Id).svg" />
    </div>
    <div class="decide_details">
      <label class="decide_editions">
        <p>Material Upgrade?</p>
        <input type="checkbox" name="edition" value="platinum" />
        <span>Platinum<br />Edition</span>
        <img src="https://mi-fr.org/img/@(Model.Id)_platinum.svg" />
      </label>
      <checkout-buy sku="@Model.Id" edition="standard"></checkout-buy>
    </div>
    <aside class="decide_recos" data-fragment="/inspire/fragment/recommendations/@(Model.Id)">
      <a href="/recommendations/@(Model.Id)">Show Recommendations</a>
    </aside>
    <div class="decide_summary">
        <checkout-minicart></checkout-minicart>
    </div>
    <script src="/decide/static/page.js" async></script>
    <script src="/checkout/static/components.js"></script>
    <script src="/checkout/_content/Microsoft.AspNetCore.Components.CustomElements/BlazorCustomElements.js"></script>
    <script src="/checkout/_framework/blazor.webassembly.js" autostart="false"></script>
    <script>
        Blazor.start({
            loadBootResource: function (type, name, defaultUri, integrity) {
                return `/checkout/_framework/${name}`;
            }
        });
    </script>
  </body>
</html>
